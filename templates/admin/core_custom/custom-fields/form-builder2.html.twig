  /* fix menu sticky position */
  .form-wrap.form-builder .cb-wrap {
    top: 100px !important;
  }
  /* Fix menu action soemtime not clickable */
  .form-wrap.form-builder .frmb .field-actions {
    z-index: 500000;
  }
</style>